<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/education1">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Welcome "
                    android:textColor="@color/selficoncolor"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/img_selfimg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="to"
                    android:textColor="@color/selficoncolor"
                    android:textSize="30dp" />

                <ImageView
                    android:layout_width="287dp"
                    android:layout_height="41dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:foregroundGravity="right"
                    android:src="@drawable/selfenabler_logoo" />

                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="16.0dip"
                    android:layout_marginRight="16.0dip"
                    android:layout_marginTop="40.0dip"
                    android:elevation="3dp"
                    android:background="@drawable/border"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="Email Address"
                    android:inputType="textEmailAddress"
                    android:padding="10.0dip"
                    android:textColor="@color/selficoncolor"
                    android:textColorHint="@color/selficoncolor"
                    android:textSize="15.0dip" />


                <EditText
                    android:id="@+id/etPass"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="16.0dip"
                    android:layout_marginRight="16.0dip"
                    android:layout_marginTop="10.0dip"
                    android:elevation="3dp"
                    android:ems="10"
android:background="@drawable/border"
                    android:gravity="center"
                    android:hint="Password"
                    android:inputType="textPassword"

                    android:padding="10.0dip"
                    android:textColor="@color/selficoncolor"
                    android:textColorHint="@color/selficoncolor"
                    android:textSize="15.0dip" />



                <Button
                    android:id="@+id/btn_signInn"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10.0dip"
                    android:layout_marginLeft="16.0dip"
                    android:layout_marginRight="16.0dip"
                    android:layout_marginTop="30.0dip"
                    android:background="@drawable/border1"
                    android:elevation="10dp"
                    android:text="Login"
                    android:textAllCaps="false"
                    android:textColor="#ffffffff"
                    android:textSize="15dp" />


